{
  "compilerOptions": {
    "outDir": "../static/js",
    "sourceMap": true,
    "noImplicitAny": true,
    "downlevelIteration": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "target": "es5",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "lib": [
      "dom",
      "es2016",
      "es2017.object"
    ],
    "moduleResolution": "node",
    "pretty": true,
    "removeComments": true
  },
  "include": [
    "./src/**/*",
    "!./node_modules/**/*"
  ],
  "exclude": [
    "node_modules",
    "__tests__"
  ],
  "types": ["jest", "expect"]
}
